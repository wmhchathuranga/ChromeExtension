{
    "name": "Youtube MP3 Downloader",
    "description": "Download Youtube Videos in MP3 fromat",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "bg.png",
        "default_popup": "popup/index.html",
        "default_title": "Tiktok Follower"
    }
}